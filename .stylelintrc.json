{
  "extends": [
    "stylelint-a11y/recommended",
    "stylelint-config-hudochenkov/full",
    "stylelint-config-htmlacademy",
    "stylelint-config-prettier"
  ],
  "plugins": ["stylelint-scss", "stylelint-order", "stylelint-a11y"],
  "rules": {
    "selector-max-type": 2,
    "rule-empty-line-before": [
      "always",
      {
        "except": "first-nested"
      }
    ]
  }
}
